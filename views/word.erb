<h2>Word: <%= @word.word %></h2><br>
<h4>Definitions:</h4>


<% if @definitions.any? %>
  <ul>
    <% @definitions.each do |definition| %>
      <li><a href="/words/<%= @word.id %>/definition/<%= definition.id %>"><%= definition.definition %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no definitions</p>
<% end %>

<form action="/words/<%= @word.id %>" method="post">
  <div class="form-group">
    <label name="definition">Enter definition here</label>
    <input id="definition" class="form-control" name="definition" type="text">
  </div>
  <button type='submit' class="btn btn-primary">Add Definition</button>
</form><br>

<form action="/words" method="post">
  <input name="id" type="hidden" value="<%= @word.id %>">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn">Delete This Word</button>
</form><br>

<a href="/words">Back to words</a><br>